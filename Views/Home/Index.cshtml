@{
    ViewData["Title"] = "Home Page";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container my-5">
    <div class="row align-items-center">
        <div class="col-md-6">
            <h2 class="mb-4">Shop the Latest Trends</h2>
            <p class="lead">Discover amazing products at unbeatable prices. Fast shipping, secure checkout, and top-notch customer service.</p>
            <a href="#" class="btn btn-primary btn-lg mt-3">Shop Now</a>
        </div>
        <div class="col-md-6 text-center">
            <img src="https://images.unsplash.com/photo-1513708927688-890fe8a9bca3?auto=format&fit=crop&w=600&q=80" class="img-fluid rounded shadow" alt="Ecommerce Banner">
        </div>
    </div>
</div>

