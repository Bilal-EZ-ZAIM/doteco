<!-- Bootstrap CSS -->
<style>
    body {
        transition: background 0.3s, color 0.3s;
    }
    .dark-mode {
        background: #181a1b !important;
        color: #f1f1f1 !important;
    }
    .dark-mode .card {
        background: #23272b;
        color: #f1f1f1;
        border-color: #343a40;
    }
    .dark-mode .btn-primary, .dark-mode .btn-outline-primary {
        background: #0d6efd;
        border-color: #0d6efd;
        color: #fff;
    }
    .dark-mode .btn-outline-primary {
        background: transparent;
        color: #0d6efd;
    }
    .dark-mode .blockquote-footer {
        color: #b0b0b0;
    }
    .mode-toggle {
        position: fixed;
        top: 1rem;
        right: 1rem;
        z-index: 1050;
    }
</style>
<button class="btn btn-secondary mode-toggle" id="modeToggle" aria-label="Toggle dark mode">
    <span id="modeIcon" class="bi bi-moon"></span> <span id="modeText">Dark Mode</span>
</button>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<script>
    // Dark mode toggle logic
    function setMode(dark) {
        if (dark) {
            document.body.classList.add('dark-mode');
            document.getElementById('modeIcon').className = 'bi bi-sun';
            document.getElementById('modeText').innerText = 'Light Mode';
            localStorage.setItem('theme', 'dark');
        } else {
            document.body.classList.remove('dark-mode');
            document.getElementById('modeIcon').className = 'bi bi-moon';
            document.getElementById('modeText').innerText = 'Dark Mode';
            localStorage.setItem('theme', 'light');
        }
    }
    document.addEventListener('DOMContentLoaded', function () {
        const savedTheme = localStorage.getItem('theme');
        setMode(savedTheme === 'dark');
        document.getElementById('modeToggle').addEventListener('click', function () {
            setMode(!document.body.classList.contains('dark-mode'));
        });
    });
</script>
